@model IEnumerable<TEATRO.Models.Producto>

@{
    ViewData["Title"] = "Gestión de Productos";
}

<h1 class="text-center text-light">🛒 Gestión de Productos</h1>

<!-- 🔙 Botón para volver al Panel de Administración -->
<a asp-controller="AdministradorDashboard" asp-action="Dashboard" class="btn btn-secondary mb-3">
    🔙 Volver al Panel de Administración
</a>

<p>
    <a asp-action="Create" class="btn btn-primary">➕ Crear Nuevo Producto</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.Precio)</th>
            <th>@Html.DisplayNameFor(model => model.Imagen)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>₡@Html.DisplayFor(modelItem => item.Precio)</td>
                <td>
                    <img src="~/images/@item.Imagen" alt="Imagen de @item.Nombre" style="width: 80px; height: 80px; border-radius: 8px;" />
                </td>
                <td>
                    @if (item.Estado)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactivo</span>
                    }
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏️ Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">🔍 Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑️ Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
