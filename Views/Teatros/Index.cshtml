@model IEnumerable<TEATRO.Models.Teatro>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center text-light">🎭 Gestión de Teatros</h1>

<!-- 🔙 Botón para volver al Panel de Administración -->
<a asp-controller="AdministradorDashboard" asp-action="Dashboard" class="btn btn-secondary mb-3">
    🔙 Volver al Panel de Administración
</a>

<p>
    <a asp-action="Create" class="btn btn-primary">➕ Crear Nuevo Teatro</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Ubicacion)</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Ubicacion)</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏️ Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">🔍 Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑️ Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
