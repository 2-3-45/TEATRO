@model IEnumerable<TEATRO.Models.Obra>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<!-- 🔙 Botón para volver al Panel de Administración -->
<a asp-controller="AdministradorDashboardController" asp-action="Dashboard" class="btn btn-secondary mb-3">
    🔙 Volver al Panel de Administración
</a>

<p>
    <a asp-action="Create" class="btn btn-primary">➕ Crear Nueva Obra</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Titulo)</th>
            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.Teatro.Nombre)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>@Html.DisplayFor(modelItem => item.Teatro.Nombre)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏️ Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">🔍 Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑️ Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
